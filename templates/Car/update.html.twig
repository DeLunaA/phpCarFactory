{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Update form</h3>
        {% for message in app.flashes('notice')%}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div classe="col-md-6 offset-md-3">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.model) }}
                    {{ form_widget(form.model,{'attr':{'class' : 'form-control'}}) }}  
                </div>
                <div class="form-group">
                    {{ form_label(form.creationDate) }}
                    {{ form_widget(form.creationDate,{'attr':{'class' : 'form-control'}}) }}   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mt-4 ">Update</button>
                </div>
            {{ form_end(form) }}
       </div>
    </div>
</div>
{% endblock %}
